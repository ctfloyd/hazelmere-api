{
  "log": {
    "level": "INFO"
  },
  "clients": {
    "worker": {
      "host": "http://hazelmere-worker.railway.internal:8080",
      "timeout": 10000,
      "retries": 0,
      "retryWaitMs": 0,
      "retryMaxWaitMs": 0
    }
  },
  "mongo": {
    "connection": {
      "username": "{{MONGOUSER}}",
      "password": "{{MONGOPASSWORD}}",
      "host": "{{MONGO_URL}}"
    },
    "database": {
      "name": "hazelmere",
      "collections": {
        "snapshot": "snapshot",
        "user": "user",
        "delta": "delta"
      }
    }
  },
  "auth": {
    "enabled": true,
    "tokens": ["{{API_TOKEN}}"]
  },
  "otel": {
    "enabled": true,
    "serviceName": "hazelmere",
    "serviceNamespace": "hazelmere",
    "endpoint": "https://otlp-gateway-prod-us-east-2.grafana.net/otlp",
    "authHeader": "{{OTEL_AUTH}}"
  }
}
