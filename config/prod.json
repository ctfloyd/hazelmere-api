{
  "log": {
    "level": "INFO"
  },
  "clients": {
    "worker": {
      "host": "https://hazelmere-worker.railway.internal:8080",
      "timeout": 10000,
      "retries": 0,
      "retryWaitMs": 0,
      "retryMaxWaitMs": 0
    }
  },
  "mongo": {
    "connection": {
      "username": "{{MONGOUSER}}",
      "password": "{{MONGOPASSWORD}}",
      "host": "{{MONGO_URL}}"
    },
    "database": {
      "name": "hazelmere",
      "collections": {
        "snapshot": "snapshot",
        "user": "user"
      }
    }
  }
}
